<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view"
        android:layout_width="388dp"
        android:layout_height="179dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.695"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <ImageView
        android:id="@+id/img_talo"
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:layout_marginStart="40dp"
        android:transitionName="fade1"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/talo" />

    <TextView
        android:id="@+id/tv_baihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Love Story"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_talo"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toEndOf="@+id/img_talo"
        app:layout_constraintTop_toTopOf="@+id/img_talo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_tencs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Taylor Swift"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_baihat"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_baihat"
        app:layout_constraintTop_toBottomOf="@+id/tv_baihat" />

</androidx.constraintlayout.widget.ConstraintLayout>